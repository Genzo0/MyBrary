<h2 class="page-header"><%= book.title %> </h2>
<img  width="100" height="150" src="<%= book.coverImagePath %>" alt="">
<div>Author : <%= book.author.name %></div>
<div>Publish Date : <%= book.publishDate.toDateString() %> </div>
<div>Page Count : <%= book.pageCount %> </div>
<div>Description : <%= book.description %> </div>

<div class="form-row">
    <div class="btn-row">
        <a class="btn btn-primary" href="/books/<%= book._id %>/edit" >Edit</a>
        <%- include('../partials/deleteForm', {url : `/books/${book._id}`})  %> 
        <a class="btn btn-primary" href="/authors/<%= book.author._id %>">View Author</a>
    </div>
</div>